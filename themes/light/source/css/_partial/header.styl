#header
  text-shadow 0px 0px 5px #000
  margin 50px auto
  a
    color #fff
    &:hover
      color color-link
      text-decoration none
      text-shadow 0 0 0px color-link
    
  h1
    font-weight normal
    font-size 2.5em
    line-height 1

  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px
  
  #main-nav
    font-family font-title
    line-height 2.5em
    ul
      list-style none
      li
        float left
        margin-left 30px